{{!< ../default}}

<header class="site-header">
    {{> site-header}}
</header>
<main id="site-main" class="site-main site-account outer">
    <div class="inner">

    {{#if @member}}

        {{!-- Logged in member: Show account info --}}
        <div class="account-box">
            <div class="subscriber-avatar">
                {{> "icons/avatar"}}
                {{#if @member.avatar_image}}
                    <img src="{{@member.avatar_image}}" />
                {{/if}}
            </div>
            <h1 class="account-box-title">You are a member of {{@site.title}}!</h1>
            <p>Hey there! <strong>{{@member.email}}</strong> is subscribed to free updates from {{@site.title}}.</p>
            <p>Thanks for supporting {{@site.title}} and sharing with your friends and colleagues. If you want to update your subscription at any time, just reach out and let us know.</p>


    {{else}}

        {{!-- Not logged in: Redirect to signin --}}
        <script>window.location = '{{@site.url}}/signin/';</script>

    {{/if}}

    </div>
</main>
